<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_page"
    android:orientation="vertical"
    android:background="#efefef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30px"
            android:text="맛있는 파스타"
            android:textSize="50px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800px">
        <ImageView
            android:id="@+id/content_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/test"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingBottom="40px"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe"
            android:textSize="50px"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginBottom="20px">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="[재료 1인분]"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="스파게티 면 80~100g, 새우 10마리, 다진마늘 1큰 술, 슬라이스 마늘3개, 올리브유 3큰술, 소금 3꼬집, 후추약간, 끓인 면수 1국자."/>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[조리방법]"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="올리브 오일을 두르고 슬라이스마늘을 집어넣습니다.
그다음 끓는물에 소금을 한꼬집 넣고 스파게티 면을 넣어주세요 .
(면수는 절때 버리지 마세요)
새우와 면을 넣고 섞으시다가 면수를 넣어주세요."/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10px">

        <ListView
            android:id="@+id/c_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
</LinearLayout>